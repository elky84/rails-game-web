<p id="notice"><%= notice %></p>

<h1>Listing Event Instances</h1>

<table>
  <thead>
    <tr>
      <th>Event no</th>
      <th>Event type</th>
      <th>Reward</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_instances.each do |event_instance| %>
      <tr>
        <td><%= event_instance.EVENT_NO %></td>
        <td><%= event_instance.EVENT_TYPE %></td>
        <td><%= event_instance.REWARD %></td>
        <td><%= event_instance.START_DATE %></td>
        <td><%= event_instance.END_DATE %></td>
        <td><%= link_to 'Show', event_instance %></td>
        <td><%= link_to 'Edit', edit_event_instance_path(event_instance) %></td>
        <td><%= link_to 'Destroy', event_instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

