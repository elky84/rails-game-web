<p id="notice"><%= notice %></p>

<h1>Listing User Give Instances</h1>

<table>
  <thead>
    <tr>
      <th>User no</th>
      <th>Give reply</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_give_instances.each do |user_give_instance| %>
      <tr>
        <td><%= user_give_instance.USER_NO %></td>
        <td><%= user_give_instance.GIVE_REPLY %></td>
        <td><%= link_to 'Show', user_give_instance %></td>
        <td><%= link_to 'Edit', edit_user_give_instance_path(user_give_instance) %></td>
        <td><%= link_to 'Destroy', user_give_instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

