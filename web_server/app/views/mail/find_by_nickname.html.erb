<h1>Listing mail_instances</h1>

<table>
  <thead>
    <tr>
      <th>Mail no</th>
      <th>User no</th>
      <th>Title</th>
      <th>Content</th>
      <th>Sender</th>
      <th>Sender actor id</th>
      <th>Sender user no</th>
      <th>Opened</th>
      <th>Reward</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mail_instances.each do |mail_instance| %>
      <tr>
        <td><%= mail_instance.MAIL_NO %></td>
        <td><%= mail_instance.USER_NO %></td>
        <td><%= mail_instance.TITLE %></td>
        <td><%= mail_instance.CONTENT %></td>
        <td><%= mail_instance.SENDER %></td>
        <td><%= mail_instance.SENDER_ACTOR_ID %></td>
        <td><%= mail_instance.SENDER_USER_NO %></td>
        <td><%= mail_instance.OPENED %></td>
        <td><%= mail_instance.REWARD %></td>
        <td><%= mail_instance.END_DATE %></td>
        <td><%= link_to 'Show', mail_instance %></td>
        <td><%= link_to 'Edit', edit_mail_instance_path(mail_instance) %></td>
        <td><%= link_to 'Destroy', mail_instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

